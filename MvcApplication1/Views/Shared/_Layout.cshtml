@using MedicalClinic.HtmlHelpers

<!DOCTYPE html>

<html lang="en">

    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        
        
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <table style="border-color: black; width:100%">
                    <tr>
                        <td style="width:45%">
                            <a href="/Home/Index">
                                <img style="max-width: 100%;" src="~/Content/Images/medical_clinic_logo2.png" alt="Fake Medical Clinic" />
                             </a>
                        </td>
                        <td align="right">
                            
                            <nav>
                                <ul id="menu">
                                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Test", "Test", "Home")</li>
                                    <li>@Html.ActionLink("Doctors", "Index", "Doctor")</li>
                                    <li>@Html.ActionLink("Specializations", "Index", "Specialization")</li>
                                    <li>@Html.ActionLink("Departments", "Index", "Department")</li>
                                </ul>
                            </nav>
                        </td>
                    </tr>
                </table>

                <div >
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Marta Krzyk</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
