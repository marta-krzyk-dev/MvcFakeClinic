@model IList<string>

@{
    ViewBag.Title = "Names";
}

<h2>Names</h2>
@if (Model.Count() == 0)
{
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; ++i)
        {
            <div><label>@(i + 1):</label>@Html.TextBox("names")</div>
        }
        <button type="submit">Submit</button>
    }
}
else
{
    foreach (var name in Model)
    {
        <p>@name</p>
    }

    @Html.ActionLink("Go back", "Names");
}
